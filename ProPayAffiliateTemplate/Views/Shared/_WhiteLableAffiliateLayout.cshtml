<!DOCTYPE html>
@{
    ViewBag.Language = "en-us";
    ViewBag.Partner = "ProPay, Inc";
    ViewBag.PartnerTheme = "Default";
    ViewBag.PageTitle = "Affiliate Template";
    ViewBag.PageDescription = "This is the page template to be customized with the Partner's theme.";

    ViewBag.MetaBankDisclosure = "©2018 ProPay Inc. All Rights Reserved. | ProPay Inc. 3400 N. Ashton Blvd, Suite 200, Lehi, UT 84043.  ProPay is a registered ISO of Wells Fargo Bank, N.A., Concord, CA. The ProPay Prepaid Debit Mastercards® are issued by MetaBank®, Member FDIC, pursuant to license by Mastercard International Incorporated. Mastercard is a registered trademark of Mastercard International Incorporated.";

    //Partner Social Media Channels
    ViewBag.PartnerFacebookURI = "Facebook";
    ViewBag.PartnerTwitterURI = "Twitter";
    ViewBag.PartnerInstagramURI = "Instagram";
    ViewBag.PartnerLinkedInURI = "LinkedIn";
    ViewBag.PartnerPinterestURI = "Pinterest";
    ViewBag.PartnerYouTubeChannelURI = "YouTube";
}

<html lang="@Html.Raw(ViewBag.Language)">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0" />
    @* HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries *@
    @* WARNING: Respond.js doesn't work if you view the page via file:// *@
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <title>@Html.Raw(ViewBag.PageTitle)</title>
    <meta name="description" content="@Html.Raw(ViewBag.PageDescription)" />
    <meta name="robots" content="index,follow">
    <meta name="author" content="@Html.Raw(ViewBag.Partner)" />
    <meta name="copyright" content="@Html.Raw(ViewBag.Partner)" />

    <!-- Facebook Opengraph integration: https://developers.facebook.com/docs/sharing/opengraph -->
    <meta property="og:title" content="">
    <meta property="og:image" content="">
    <meta property="og:url" content="">
    <meta property="og:site_name" content="">
    <meta property="og:description" content="">

    <!-- Twitter Cards integration: https://dev.twitter.com/cards/  -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="">
    <meta name="twitter:title" content="">
    <meta name="twitter:description" content="">
    <meta name="twitter:image" content="">

    <link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/App_Themes/@ViewBag.PartnerTheme/css/pricing-table.min.css" rel="stylesheet" />
    <link href="~/App_Themes/@ViewBag.PartnerTheme/img/favicon.ico" rel="icon">

</head>
<body>
    <div class="container-fluid">
        @RenderBody()

        <footer class="site-footer">
            <div class="container bottom-footer">
                <div class="row">
                    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 metabank-disclosure">
                        @Html.Raw(ViewBag.MetaBankDisclosure)
                        <div class="mt15"></div>
                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                        <div class="row color-white">
                            <div class="col-xs-6 col-sm-12 col-md-6 col-lg-6 no-gutters">
                                <div class="row">
                                    <div class="col-xs-2 col-sm-4 col-md-4 col-lg-4"><div class="icon social fb"><a href="https://facebook.com/@ViewBag.PartnerFacebookURI" class="facebook" title="Facebook" rel="index,follow" target="_blank"><i class="fa fa-facebook"></i></a></div><div class="mt8"></div></div>
                                    <div class="col-xs-2 col-sm-4 col-md-4 col-lg-4"><div class="icon social tw"><a href="https://twitter.com/@ViewBag.PartnerTwitterURI" class=" twitter" title="Twitter" rel="index,follow" target="_blank"><i class="fa fa-twitter"></i></a></div><div class="mt8"></div></div>
                                    <div class="col-xs-2 col-sm-4 col-md-4 col-lg-4"><div class="icon social ins"><a href="https://www.instagram.com/@ViewBag.PartnerInstagramURI" class="instagram" title="Instagram" rel="index,follow" target="_blank"><i class="fa fa-instagram"></i></a></div><div class="mt8"></div></div>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-12 col-md-6 col-lg-6 no-gutters">
                                <div class="row">
                                    <div class="col-xs-2 col-sm-4 col-md-4 col-lg-4"><div class="icon social in"><a href="https://linkedin.com/in/@ViewBag.PartnerLinkedInURI" class=" linkedin" title="LinkedIn" rel="index,follow" target="_blank"><i class="fa fa-linkedin"></i></a></div><div class="mt8"></div></div>
                                    <div class="col-xs-2 col-sm-4 col-md-4 col-lg-4"><div class="icon social pin"><a href="https://www.pinterest.com/@ViewBag.PartnerPinterestURI" class=" pinterest" title="Pinterest" rel="index,follow" target="_blank"><i class="fa fa-pinterest"></i></a></div><div class="mt8"></div></div>
                                    <div class="col-xs-2 col-sm-4 col-md-4 col-lg-4"><div class="icon social yt"><a href="https://youtube.com/@ViewBag.PartnerYouTubeChannelURI" class=" youtube" title="YouTube" rel="index,follow" target="_blank"><i class="fa fa-youtube"></i></a></div><div class="mt8"></div></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/Scripts/bootstrap/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap/bootstrap.min.js"></script>
</body>
</html>

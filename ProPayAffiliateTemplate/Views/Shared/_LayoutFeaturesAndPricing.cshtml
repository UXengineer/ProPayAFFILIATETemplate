<!DOCTYPE html>
@{
    ViewBag.PartnerTheme = "MaryKay";
    ViewBag.PageTitle = "Small Business Merchant Account Features &amp; Pricing";
    ViewBag.PageDescription = "Accept Credit cards anytime, anywhere, in-person, online, mobile.  Payment solutions for Small Businesses. Low rates, free support. Sign up in 5 minutes. Compare to Square &amp; PayPal.";
    ViewBag.PartnerName = "Mary Kay";

    ViewBag.PartnerGoogleTagManagerID = "GTM-MZ8MRT";
    ViewBag.GoogleUniversalID = "UA-12739219-14";
    ViewBag.PartnerBingValidationID = "90F39A1349E577CF8C33173B061B6A01";

    //CUSTOM Colors
    //ViewBag.MainThemeColor = "#0080a6"; //ProPay Blue
    //ViewBag.MainThemeColor = "#9fc163"; //ProPay Green
    ViewBag.MainThemeColor = "#ef477e"; //MaryKay Pink
    ViewBag.ButtonTextColor = "#FFFFFF";
    ViewBag.ButtonRadius = "30";

    //Hero Banner
    ViewBag.SignUpButtonLabel = "Sign Up";
    ViewBag.HeroTaglineLabel = "Special merchant accounts for Mary Kay consultants";
    ViewBag.LoginButtonLabel = "LOGIN";

    //Social Media Channels
    ViewBag.Facebook = "FacebookChannel";
    ViewBag.Twitter = "Twitter";
    ViewBag.YouTube = "YouTube";
    ViewBag.LinkedIn = "LinkedIn";
    ViewBag.Instagram = "Instagram";

    //Footer
    ViewBag.Copyright = "2018 © ProPay Inc. All Rights Reserved. | ProPay Inc. 3400 N. Ashton Blvd, Suite 200, Lehi, UT 84043.  ProPay is a registered ISO of Wells Fargo Bank, N.A., Concord, CA. The ProPay Prepaid Debit Mastercards® are issued by MetaBank®, Member FDIC, pursuant to license by Mastercard International Incorporated. Mastercard is a registered trademark of Mastercard International Incorporated.";
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no" />
    <title>@ViewBag.PageTitle</title>
    <link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <style type="text/css">
        .nav-tabs {margin-bottom: 30px;}
        .nav-tabs .nav-link.active {background-color:@Html.Raw(ViewBag.MainThemeColor);color:@Html.Raw(ViewBag.ButtonTextColor);box-shadow: 0 16px 26px -10px #999, 0 4px 25px 0 rgba(0, 0, 0, 0.12), 0 8px 10px -5px #999;border-radius: 20px;font-weight: 600;}

        .nav-tabs .nav-link {background-color:#eee;color:#777;box-shadow: 0 16px 26px -10px #999, 0 4px 25px 0 rgba(0, 0, 0, 0.12), 0 8px 10px -5px #999;border-radius: 20px;font-weight: 600;}

        .nav-tabs .nav-item.show .nav-link {background-color:@Html.Raw(ViewBag.MainThemeColor);color:@Html.Raw(ViewBag.ButtonTextColor);box-shadow: 0 16px 26px -10px #999, 0 4px 25px 0 rgba(0, 0, 0, 0.12), 0 8px 10px -5px #999;border-radius: 20px;font-weight: 600;}

        .plan-header-name { display: inline;font-size: 2.0em;font-weight: 700;color:@Html.Raw(ViewBag.MainThemeColor); }
        .rates-as-low-as-percentage { border: solid 1px @Html.Raw(ViewBag.MainThemeColor);color: @Html.Raw(ViewBag.MainThemeColor);padding: 4px 7px 7px 7px;margin-left: 4px;font-size: 22px;}

        .partner-btn {border: none;border-radius: 3px;position: relative;padding: 10px 25%;margin: 10px 1px;font-size: 12px;font-weight: 400;text-transform: uppercase;letter-spacing: 0;
                      will-change: box-shadow, transform;transition: box-shadow 0.2s cubic-bezier(0.4, 0, 1, 1), background-color 0.2s cubic-bezier(0.4, 0, 0.2, 1);}
        .partner-btn.btn-round {border-radius: 30px;}
        .partner-btn.custom-pricing-btn {color:@Html.Raw(ViewBag.ButtonTextColor); background-color:@Html.Raw(ViewBag.MainThemeColor);border-color:@Html.Raw(ViewBag.MainThemeColor);box-shadow: 0 2px 2px 0 #999, 0 3px 1px -2px #999, 0 1px 5px 0 #999;font-size: 1em;}
        .partner-btn.custom-pricing-btn:focus {box-shadow: 0 14px 26px -12px #999, 0 4px 23px 0 rgba(0, 0, 0, 0.12), 0 8px 10px -5px #999;}
        .partner-btn.custom-pricing-btn:active {box-shadow: 0 14px 26px -12px #999, 0 4px 23px 0 rgba(0, 0, 0, 0.12), 0 8px 10px -5px #999;}
        .partner-btn.custom-pricing-btn:hover {box-shadow: 0 14px 26px -12px #999, 0 4px 23px 0 rgba(0, 0, 0, 0.12), 0 8px 10px -5px #999;}

        .partner-cover-btn {border: none;border-radius: 3px;position: relative;padding: 12px 45px;margin: 10px 1px;font-size: 12px;font-weight: 400;text-transform: uppercase;
                            text-decoration: none;letter-spacing: 0;will-change: box-shadow, transform; }
        .partner-cover-btn.cover-btn-round {border-radius:@Html.Raw(ViewBag.ButtonRadius)px; }

        .features-and-pricing-holder {background-color:@Html.Raw(ViewBag.MainThemeColor);height: 30px;text-align: left;margin: 15px -15px;}
        .features-and-pricing-header {color:@Html.Raw(ViewBag.ButtonTextColor);padding: 7px 0 0 25px;font-weight: 500;font-size: 13px;letter-spacing: 0.1em;text-transform: uppercase;}
        .rates-divider {background-color:@Html.Raw(ViewBag.MainThemeColor);height: 5px;margin: 0 -15px;}
        .discounted-plan-percentage {background-color:@Html.Raw(ViewBag.MainThemeColor);padding: 6px;margin-left: 10px;font-size: 13px;color:@Html.Raw(ViewBag.ButtonTextColor);}
        a {color:@Html.Raw(ViewBag.MainThemeColor);text-decoration: none;}
        a:hover {color:@Html.Raw(ViewBag.MainThemeColor);text-decoration: underline;}

        .footer {background:@Html.Raw(ViewBag.MainThemeColor);min-height: 3rem;width: 100%;color: rgba(255, 255, 255, 0.6);padding-top: 15px;padding-bottom: 15px;}
        .footer p {font-size: 12px;color: rgba(255, 255, 255, 0.6);margin: 10px 8px;}
        .footer .nav-footer .nav-link {@Html.Raw(ViewBag.ButtonTextColor);}
        .footer .nav-footer .nav-link:hover {color: rgba(255, 255, 255, 0.9); }
    </style>
    <link href="~/Content/features-and-pricing.css" rel="stylesheet" />
    @{
        Html.RenderPartial("_AnalyticsGoogleTagManager");
        Html.RenderPartial("_AnalyticsBingVerificationTag");
    }
</head>
<body>
    @{
        Html.RenderPartial("_AnalyticsGoogleTagManagerConfirmation");
    }
    <section style="background: #3d354f url('../../App_Themes/@ViewBag.PartnerTheme/img/cover.jpg') center no-repeat;background-size: cover;min-height: 42rem;height: auto;border-radius: 0;width: 100%;color: #fff;padding-top: 1rem;text-align:center;">
        <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
            <div class="container">
                <a class="navbar-brand text-shadow-half" href="Index">@Html.Raw(ViewBag.PartnerName)</a>
                <button class="navbar-toggler navbar-toggler-social" type="button" data-toggle="collapse" data-target="#navbar-4" aria-controls="navbar-4" aria-expanded="false" aria-label="Toggle navigation">@*CONNECT*@<i class="fa fa-bars"></i></button>
                <div class="collapse navbar-collapse pull-xs-right justify-content-end" id="navbar-4">
                    <ul class="social navbar-nav mt-2 mt-md-0">
                        @{
                            Html.RenderPartial("_SocialMediaChannels");
                        }
                        <div class="clear"></div>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="cover-container">
            <div class="row">
                <div class="col-md-5"></div>
                <div class="col-md-6">
                    <div class="cover-inner">
                        <div class="display-block pb30"><img src="~/App_Themes/@ViewBag.PartnerTheme/img/logo.png" class="img-fluid" /></div>
                        <div class="pt15"><a href="#" id="SignUpLink" class="partner-cover-btn cover-btn-round" style="color: @Html.Raw(ViewBag.ButtonTextColor);background-color:@Html.Raw(ViewBag.MainThemeColor);border-color:@Html.Raw(ViewBag.MainThemeColor);font-size:1em;text-decoration:none;" title="Easy account sign up. Start Now!" onclick="dataLayer.push({'pageTitle': '@ViewBag.PageTitle','event': '@ViewBag.SignUpButtonLabel'});">@Html.Raw(ViewBag.SignUpButtonLabel)</a></div>

                        @*<div class="pt15"><a href="#" id="SignUpLink" class="partner-cover-btn custom-pricing-cover-btn cover-btn-round" title="Easy account sign up. Start Now!">@Html.Raw(ViewBag.SignUpButtonLabel)</a></div>*@
                        <div class="pb10 mb20"></div>
                        <h1 class="jumbotron-heading text-shadow">Special merchant accounts for Mary Kay consultants</h1>
                        <div class="pb30"></div>
                        <p class="lead" hidden>Be the first to know when we are ready to launch. Etiam porta sem malesuada magna mollis euismod. Sed mollis neque at aliquam rhoncus, consectetur adipiscing elit.</p>
                        <div class="pt30"><a href="#" id="LoginLink" class="partner-cover-btn cover-btn-round" style="color: @Html.Raw(ViewBag.ButtonTextColor);background-color:@Html.Raw(ViewBag.MainThemeColor);border-color:@Html.Raw(ViewBag.MainThemeColor);font-size:1em;text-decoration:none;" title="Login to your account!" onclick="dataLayer.push({'pageTitle': '@ViewBag.PageTitle','event': '@ViewBag.LoginButtonLabel'});">@Html.Raw(ViewBag.LoginButtonLabel)</a></div>
                        <div class="pb10 mb10"></div>
                    </div>
                </div><div class="col-md-1"></div>
            </div>
        </div>
    </section>
    @*<section class="content alt-background">*@ @*ORIGINAL <section> TAG*@
    @*  ******************* VALUE COLUMNS *******************  *@
    <section class="content" style="background: @Html.Raw(ViewBag.MainThemeColor) !important;border-top: 1px solid @Html.Raw(ViewBag.MainThemeColor);border-bottom: 1px solid @Html.Raw(ViewBag.MainThemeColor);">
        <div class="container">
            <div class="row justify-center">
                <div class="col-md-12 text-center mr-auto">
                    <h2 class="white">Accept Credit Cards and Debit Cards for your business</h2>
                    <p class="mb-3 white">Why do Mary Kay consultants choose ProPay for their business? Because only ProPay offers this unique set of payment tools so that you never miss a chance to make a sale.</p>
                </div>
                <div class="col-md-12 text-center mr-auto">
                    <div class="row">
                        <div class="col">
                            <div class="display-block">
                                <img src="~/App_Themes/Default/img/feature-1.png" class="img-fluid" />
                            </div>
                            <h4 class="features-header">Mary Kay Prepaid Debit MasterCard<sup>®</sup></h4>
                            <p class="features-description">Promote your brand every time you use your card. Access to funds within 24 hours including holidays and weekends.</p>
                        </div>
                        <div class="col">
                            <div class="display-block">
                                <img src="~/App_Themes/Default/img/feature-2.png" class="img-fluid" />
                            </div>
                            <h4 class="features-header">No need to transfer funds around</h4>
                            <p class="features-description">Spend funds from your commissions and sales directly from your ProPay ccount to buy more product from Mary Kay corporate.</p>
                        </div>
                        <div class="col">
                            <div class="display-block">
                                <img src="~/App_Themes/Default/img/feature-3.png" class="img-fluid" />
                            </div>
                            <h4 class="features-header">Mary Kay branded card reader</h4>
                            <p class="features-description">Show off your Mary Kay business every time you swipe a credit/debit card for a sale.</p>
                        </div>
                        <div class="col">
                            <div class="display-block">
                                <img src="~/App_Themes/Default/img/feature-4.png" class="img-fluid" />
                            </div>
                            <h4 class="features-header">Integration to your Mary Kay personal website</h4>
                            <p class="features-description">Only ProPay is integrated with your Mary Kay Personal Website so that you can accept paymetns any time online.</p>
                        </div>
                        <div class="col" hidden>
                            <div class="display-block">
                                <img src="~/App_Themes/Default/img/feature-5.png" class="img-fluid" />
                            </div>
                            <h4 class="features-header">Additional product header in this space</h4>
                            <p class="features-description">Placeholder reserved for additional product and feature description, value and customer benefits.</p>
                        </div>
                        <div class="col" hidden>
                            <div class="display-block">
                                <img src="~/App_Themes/Default/img/feature-6.png" class="img-fluid" />
                            </div>
                            <h4 class="features-header">Additional product header in this space</h4>
                            <p class="features-description">Placeholder reserved for additional product and feature description, value and customer benefits.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    @*./******************* VALUE COLUMNS *******************/.*@


    @RenderBody()


    <footer style="background-color:@Html.Raw(ViewBag.MainThemeColor);background:@Html.Raw(ViewBag.MainThemeColor);min-height: 3rem;width: 100%; color: rgba(255,255,255,0,6);padding: 15px 0;">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-8 text-center text-md-left text-sm-left">
                    <p style="font-size: 12px;color: rgba(255, 255, 255, 0.6);margin: 10px 8px;font-family:Droid,Sans-serif;">@Html.Raw(ViewBag.Copyright)</p>
                </div>
                <div class="col-sm-12 col-md-4 text-center text-md-center mb-4">
                    <ul class="social">
                        @{
                            Html.RenderPartial("_SocialMediaChannels");
                        }
                        <div class="clear"></div>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>